{
    "configurations": [

        {
            "name": "Build KMPPlayground",
            "type": "gradle",
            "workingDir": "$PROJECT_DIR$",
            "tasks": [":server:classes"],
            "initScripts": {
                "flmapper": "ext.mapPath = { path -> path }",
                "Build KMPPlayground": "System.setProperty('org.gradle.java.compile-classpath-packaging', 'true')"
            }
        },
        {
            "name": "server [Main] (1)",
            "type": "jps-run",
            "workingDir": "$PROJECT_DIR$",
            "dependsOn": ["Build KMPPlayground"],
            "mainClass": "kr.co.vcnc.playground.kmp.ApplicationKt",
            "module": "KMPPlayground.server.main",
            "options": ["-Dfile.encoding=UTF-8"]
        },
        {
            "name": "composeApp [Desktop] (1)",
            "type": "gradle",
            "workingDir": "$PROJECT_DIR$",
            "tasks": ["jvmRun"],
            "args": ["-DmainClass=kr.co.vcnc.playground.kmp.MainKt", "--quiet", "-p", "$PROJECT_DIR$/composeApp"],
            "initScripts": {
                "flmapper": "ext.mapPath = { path -> path }"
            }
        }
    ]
}